    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                SecuredAdminManpulaion
            </web-resource-name>
            <url-pattern>/AddAdminServlet</url-pattern>
            <url-pattern>/DeleteAdminServlet</url-pattern>
